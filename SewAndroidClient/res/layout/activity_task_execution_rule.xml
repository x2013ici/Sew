<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stfx.sew.TaskExecutionRuleActivity" >

    	<!-- <TextView
	        android:id="@+id/txInputConceptBanner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:text="@string/txt_task_rule_banner"
	        android:textAppearance="?android:attr/textAppearanceLarge" /> -->
    	
    	<LinearLayout
            android:id="@+id/llRule1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkRule1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_execution_rule_select" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRule2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llRule1"
            android:orientation="vertical">

			<CheckBox
			    
                android:id="@+id/chkRule2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_execution_rule_create" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRule3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llRule2"
            android:orientation="vertical">

             <CheckBox
                android:id="@+id/chkRule3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_execution_rule_update" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRule4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llRule3"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/chkRule4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_execution_rule_delete" />
            
        </LinearLayout>

</RelativeLayout>
